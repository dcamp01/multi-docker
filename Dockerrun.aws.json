{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions":[
    {
      "name":"client",
      "image": "djxc65/multi-client",
      "hostname": "client",
      "essential": false
    },
    {
      "name":"server",
      "image":"djxc65/multi-server",
      "hostname":"api",
      "essential": false
    },
    {
      "name":"worker",
      "image":"djxc65/multi-worker",
      "essential": false
    },
    {
      "name":"nginx",
      "image":"djxc65/multi-nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["client","server"]
    }
  ]
}
